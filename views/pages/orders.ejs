<!-- views/pages/orders.ejs -->
<!-- The orders page for coupons will have search/list/add/delete/update UI here -->
<!DOCTYPE html>
<html lang="en">

<!-- User head in partials/index.ejs -->
<head>
    <% include ../partials/head %>
</head>

<body>

<!-- User header in partials/header.ejs -->
    <header>
        <% include ../partials/header %>
    </header>

<!-- Main body -->
    <main  class="container">
        <div class="jumbotron orderTitle">
            <h1>Orders</h1>
            <h4>You can find all orders in below list !</h4>

            <div class="row">
                <div class="col-lg-8">
                    <div class="input-group btn-group">
                       <input type="text" class="form-control" placeholder="Input CouponCode Or OrderID...">
                          <span class="input-group-btn">
                       <button class="btn btn-danger" type="button">Search</button>
                          </span>                       
                    </div>   
                </div>
            </div>
        </div>

         <div class="orderList">
            <ul class="list-group">
                <li class="list-group-item list-group-item-info">
                   <h4> CouponID </h4>
                   <h4> Rebated </h4>
                   <h4> Rebate Value </h4>
                   <h4> Order Value </h4>
                   <h4> OrderID </h4>


                </li>

<!-- List All Orders -->        
                <% OrderList.forEach(function(order) { %>

                   <a class="list-group-item">
                        <h4><%= order.couponID %></h4>
                        <h4><%= order.rebated %></h4>
                        <h4><%= order.rebateValue %></h4>
                        <h4><%= order.orderValue.original %> <span class="glyphicon glyphicon glyphicon-arrow-right"></span> <%= order.orderValue.final %></h4>
                        <h4><%= order.orderID %></h4>

                   </a>

                <% }); %>
            </ul>

        </div>
    </main>

<!-- User footer in partials/footer.ejs -->
    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>